<div class="edit">
<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Body</h6>
  <%= f.text_area :body %><br/>
  <%= f.submit 'Update Book' %>
<% end %>
</div>
<div class="edit-link">
<%= link_to "Show", book_path(@book.id) %><span> | </span><%= link_to "Back", books_path %>
</div>