<% if flash[:notice] %>
    <p id="notice">
        <%= flash[:notice] %>
    </p>
<% end %>
<h1>Books</h1>
<div class="index">
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
        <% @books.each do |book| %>
    <tr>
        <td>
            <%= book.title %>
        </td>
        <td>
            <%= book.body %>
        </td>
        <td>
            <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
            <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
    </tr>
        <% end %>
</table>

<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
    <h6>Title</h6>
    <%= f.text_field :title %>
    <h6>Body</h6>
    <%= f.text_area :body %><br/>
    <%= f.submit "Create Book" %>
<% end %>
</div>